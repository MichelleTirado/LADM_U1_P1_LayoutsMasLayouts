<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondomontana"
    tools:context=".MainActivity5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_marginRight="240dp"
            android:layout_height="match_parent"
            android:src="@drawable/ptsopc"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:src="@drawable/busqueda"/>

    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:columnCount="5"
        android:layout_marginTop="400dp"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        android:background="@drawable/shape2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pick up mountain"
            android:layout_marginTop="35dp"
            android:textSize="40sp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="Our adventures are as individual as the people who take them, with destinations, themes amd experiences adventure."
            android:textSize="17sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:orientation="vertical"
                android:paddingTop="15dp"
                android:paddingBottom="10dp"
                android:background="@drawable/fecha"
                android:layout_marginRight="20dp"
                android:layout_marginTop="40dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Jul"
                    android:textAlignment="center"
                    android:textSize="15sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="18"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:textSize="20sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:orientation="vertical"
                android:paddingTop="15dp"
                android:paddingBottom="10dp"
                android:background="@drawable/fechados"
                android:layout_marginTop="40dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Jul"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textSize="15sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="30"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textSize="20sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:paddingTop="15dp"
                android:paddingBottom="10dp"
                android:layout_marginLeft="60dp"
                android:background="@drawable/boton"
                android:orientation="vertical"
                android:layout_marginTop="40dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ptsbtn" />

            </LinearLayout>

        </LinearLayout>

    </GridLayout>

</LinearLayout>